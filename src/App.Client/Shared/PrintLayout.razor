@using Microsoft.Extensions.Options
@inherits LayoutComponentBase
@inject Services.PrintedReportsService DataService

<div class="print" style="font-family: @FontFamily">
    @Body
</div>

@code {
    const string DefaultFontFamily = "'Helvetica Neue', Helvetica, Arial, sans-serif;";
    string? FontFamily;

    protected override async Task OnInitializedAsync()
    {
        var result = await DataService.GetLayoutAsync(Globals.AppSettings.LayoutId);
        if (result.statusCode.IsSuccess())
        {
            FontFamily = result.item!.FontFamily ?? Globals.AppSettings.FontFamily ?? DefaultFontFamily;
        }
    }
}
