@page "/locoschedules"
@layout PrintLayout
@inject IStringLocalizer<App> Localizer
@inject NavigationManager Navigator
@inject Services.PrintedReportsService DataService


@if (Items == null)
{
    <div class="print creatingreport">@Localizer["CreatingReport"]</div>
}
else
{
    @foreach (var itemsOnPage in Items.ItemsPerPage(10))
    {
        <div class="pagebreak">
            @foreach (var item in itemsOnPage)
            {
                <VehicleScheduleCard Item="@item"></VehicleScheduleCard>
            }
        </div>
    }
}

@code {
    string? Operator { get; set; }
    private IEnumerable<LocoSchedule>? Items { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var result = await DataService.GetLocoSchedulesAsync(Globals.AppSettings.LayoutId);
        if (result.statusCode.IsSuccess())
        {
            var items = result.items.Where(i => i.ReplaceOrder == 0);
            SetQueryStringParameters();
            Items = items.Where(i => string.IsNullOrWhiteSpace(Operator) || i.Operator.Equals(Operator, StringComparison.OrdinalIgnoreCase));
        }
    }

    void SetQueryStringParameters()
    {
        var q = Navigator.QueryString();
        Operator = q["operator"];
    }
}
